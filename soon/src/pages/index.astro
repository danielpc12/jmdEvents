---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Experience">
  <main>
    <img src="/Experience.png" alt="Experience" />
  </main>
</Layout>

<style>
  html, body {
    height: 100%;
    margin: 0;
  }
  
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Hace que el contenedor principal ocupe el 100% de la pantalla */
    margin: 0;
    padding: 0;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Asegura que la imagen ocupe toda la pantalla sin deformarse */
  }
</style>
