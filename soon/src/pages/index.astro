---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Experience">
  <main>
    <img src="/Experience.png" alt="Experience" />
  </main>
</Layout>

<style>
  html, body {
    height: 100%;
    margin: 0;
  }
  
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Hace que el contenedor principal ocupe el 100% de la pantalla */
    margin: 0;
    padding: 0;
  }

  img {
    width: 100%;
    height: auto; /* Ajusta la altura automáticamente para mantener la proporción */
    max-width: 100vw; /* La imagen no excede el ancho del viewport */
    max-height: 100vh; /* La imagen no excede la altura del viewport */
    object-fit: contain; /* Ajusta la imagen para que siempre sea visible completamente */
  }
</style>
